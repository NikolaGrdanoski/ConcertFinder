<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ahme"
    tools:context=".HeavyMetalEvent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="864px"
        android:id="@+id/bandImage"
        app:layout_constraintTop_toTopOf="parent"></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cname"
        android:textSize="57px"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/bandImage"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cartist"
        android:textSize="57px"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cname"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cgenre"
        android:textSize="57px"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cartist"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cdate"
        android:textSize="57px"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cgenre"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ctime"
        android:textSize="57px"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cdate"></TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cplace"
        android:text="See the place"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ctime"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cFav"
        android:text="Add Favorite"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cplace"></Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cAdd"
        android:text="Attend"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>